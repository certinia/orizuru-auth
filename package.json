{
	"name": "@financialforcedev/orizuru-auth",
	"version": "3.0.4",
	"description": "Salesforce authentication for Heroku Node applications.",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"build": "tsc",
		"doc": "typedoc --ignoreCompilerErrors --out doc src/**/* --mode file",
		"init-project": "cp run.properties local.run.properties && cp test.properties local.test.properties",
		"prepare": "npm run build",
		"pretest": "tslint -p tsconfig.json 'src/**/*.ts' 'test/**/*.ts'",
		"test": "nyc mocha --require ts-node/register --watch-extensions ts test/**/*.test.ts test/**/**/*.test.ts"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/financialforcedev/orizuru-auth"
	},
	"keywords": [
		"orizuru",
		"heroku",
		"salesforce",
		"authentication"
	],
	"author": "financialforce",
	"license": "BSD-3-Clause",
	"dependencies": {
		"jsonwebtoken": "8.2.2",
		"lodash": "4.17.10",
		"openid-client": "2.1.0"
	},
	"devDependencies": {
		"chai": "4.1.2",
		"chai-as-promised": "7.1.1",
		"mocha": "5.2.0",
		"nyc": "12.0.1",
		"proxyquire": "2.0.1",
		"sinon": "5.0.10",
		"tslint": "5.10.0",
		"typescript": "2.9.1"
	},
	"nyc": {
		"check-coverage": true,
		"per-file": true,
		"lines": 100,
		"statements": 100,
		"functions": 100,
		"branches": 100,
		"include": [
			"src"
		],
		"reporter": [
			"lcov",
			"html",
			"text",
			"text-summary"
		],
		"cache": true,
		"all": true
	}
}