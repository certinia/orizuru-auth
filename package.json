{
	"name": "@financialforcedev/orizuru-auth",
	"version": "3.0.4",
	"description": "Salesforce authentication for Heroku Node applications.",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"build": "tsc",
		"doc": "typedoc --ignoreCompilerErrors --out doc src/**/* --mode file",
		"init-project": "cp run.properties local.run.properties && cp test.properties local.test.properties",
		"lint-fix": "tslint -p tsconfig.json --fix",
		"prepare": "npm run build",
		"pretest": "tslint -p tsconfig.json",
		"test": "nyc mocha --require ts-node/register --watch-extensions ts test/*.test.ts test/**/*.test.ts test/**/**/*.test.ts"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/financialforcedev/orizuru-auth"
	},
	"keywords": [
		"orizuru",
		"heroku",
		"salesforce",
		"authentication"
	],
	"author": "financialforce",
	"license": "BSD-3-Clause",
	"dependencies": {
		"@types/express": "4.11.1",
		"@types/jsonwebtoken": "7.2.7",
		"@types/lodash": "4.14.109",
		"@types/node": "10.3.0",
		"@types/uuid": "3.4.3",
		"axios": "0.18.0",
		"jsonwebtoken": "8.2.2",
		"lodash": "4.17.10",
		"openid-client": "2.1.0",
		"uuid": "3.2.1"
	},
	"devDependencies": {
		"@types/chai": "4.1.3",
		"@types/chai-as-promised": "7.1.0",
		"@types/mocha": "5.2.0",
		"@types/sinon": "5.0.1",
		"@types/sinon-chai": "2.7.32",
		"chai": "4.1.2",
		"chai-as-promised": "7.1.1",
		"mocha": "5.2.0",
		"nyc": "12.0.1",
		"sinon": "5.0.10",
		"sinon-chai": "3.1.0",
		"ts-node": "6.0.5",
		"tslint": "5.10.0",
		"typedoc": "0.11.1",
		"typescript": "2.9.1"
	},
	"nyc": {
		"check-coverage": true,
		"per-file": true,
		"lines": 100,
		"statements": 100,
		"functions": 100,
		"branches": 100,
		"require": [
			"ts-node/register"
		],
		"extension": [
			".ts"
		],
		"reporter": [
			"lcov",
			"html",
			"text",
			"text-summary"
		],
		"sourceMap": true,
		"instrument": true
	}
}
