{
	"name": "@financialforcedev/orizuru-auth",
	"version": "5.0.0",
	"description": "Salesforce authentication for Heroku Node applications.",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"build": "tsc",
		"doc": "typedoc --gitRevision master --ignoreCompilerErrors --out doc src/**/* --mode file",
		"init-project": "cp run.properties local.run.properties && cp test.properties local.test.properties",
		"lint-fix": "tslint -p tsconfig.json --fix",
		"prepare": "npm run build",
		"pretest": "tslint -p tsconfig.json",
		"test": "nyc mocha"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/financialforcedev/orizuru-auth"
	},
	"keywords": [
		"orizuru",
		"heroku",
		"salesforce",
		"authentication"
	],
	"author": "financialforce",
	"license": "BSD-3-Clause",
	"dependencies": {
		"@types/express": "^4.16.0",
		"@types/form-urlencoded": "^2.0.0",
		"@types/jsonwebtoken": "^8.3.0",
		"@types/lodash": "^4.14.119",
		"@types/node": "^10.12.18",
		"@types/uuid": "^3.4.4",
		"axios": "^0.18.0",
		"form-urlencoded": "^3.0.0",
		"jsonwebtoken": "^8.4.0",
		"lodash": "^4.17.11",
		"openid-client": "^2.4.5",
		"uuid": "^3.3.2"
	},
	"devDependencies": {
		"@types/chai": "^4.1.7",
		"@types/chai-as-promised": "^7.1.0",
		"@types/mocha": "^5.2.5",
		"@types/sinon": "^7.0.3",
		"@types/sinon-chai": "^3.2.2",
		"chai": "^4.2.0",
		"chai-as-promised": "^7.1.1",
		"mocha": "^5.2.0",
		"nyc": "^13.1.0",
		"sinon": "^7.2.2",
		"sinon-chai": "^3.3.0",
		"ts-node": "^7.0.1",
		"tslint": "^5.12.0",
		"typedoc": "^0.14.0",
		"typescript": "^3.2.2"
	},
	"nyc": {
		"all": true,
		"check-coverage": true,
		"per-file": true,
		"lines": 100,
		"statements": 100,
		"functions": 100,
		"branches": 100,
		"require": [
			"ts-node/register"
		],
		"extension": [
			".ts"
		],
		"exclude": [
			"coverage",
			"dist",
			"doc",
			"**/*.d.ts",
			"src/flow/response"
		],
		"reporter": [
			"lcov",
			"html",
			"text",
			"text-summary"
		],
		"sourceMap": true,
		"instrument": true
	}
}
