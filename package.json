{
  "name": "@financialforcedev/orizuru-auth",
  "version": "3.0.3",
  "description": "Salesforce authentication for Heroku Node applications.",
  "main": "src/lib/index.js",
  "scripts": {
    "doc": "jsdoc src/lib -r -d doc --readme readme.md",
    "pretest": "eslint src test",
    "test": "nyc mocha --recursive src/spec"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/financialforcedev/orizuru-auth"
  },
  "keywords": [
    "orizuru",
    "heroku",
    "salesforce",
    "authentication"
  ],
  "author": "financialforce",
  "license": "BSD-3-Clause",
  "dependencies": {
    "jsonwebtoken": "8.1.0",
    "lodash": "4.17.4",
    "openid-client": "1.18.1"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "src"
    ],
    "reporter": [
      "lcov",
      "html",
      "text",
      "text-summary"
    ],
    "cache": true,
    "all": true
  },
  "devDependencies": {
    "@financialforcedev/eslint-config": "3.0.1",
    "chai": "4.1.2",
    "chai-as-promised": "7.1.1",
    "jsdoc": "3.5.5",
    "mocha": "4.0.1",
    "nyc": "11.3.0",
    "proxyquire": "1.8.0",
    "sinon": "4.1.2"
  }
}
